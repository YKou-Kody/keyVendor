<% layout('/layouts/boilderplate') %>
    <!-- <div id="map" style="width:100%; height:500px"></div> -->
    <h1 class="text-light text-center pb-5 display-1 font-bold">
        Browse Shops
    </h1>
    <!-- <div>
        <a href="/campgrounds/new">
            Add Campground
        </a>
    </div> -->
    <ul>
        <% for(let shop of shops){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=shop.image[0]?.url%>" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= shop.title%>
                                    <p class="card-text">
                                        <%= shop.description%>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <%= shop.location%>
                                        </small>
                                    </p>
                                    <a class="btn btn-primary" href="/shops/<%=shop._id%>">View
                                        <%=shop.title%>
                                    </a>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>

            <%}%>

    </ul>