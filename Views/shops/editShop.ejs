<% layout('layouts/boilderplate')%>


    <div class="row">
        <h1 class="text-center text-white">Edit Shop</h1>
        <div class="col-6 offset-3">

            <form action="/shops/<%=shop._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label text-white" for="title">
                        Shop name
                    </label>
                    <input class='form-control' type="text" id="title" name="shop[title]" value="<%=shop.name%>"
                        required />
                </div>

                <div class="mb-3">
                    <label class="form-label text-white" for="location">Location</label>
                    <input class='form-control' type="text" id="location" name="shop[location]"
                        value="<%=shop.location%>" required />
                </div>

                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Add more images</label>
                    <div class="input-group custom-file mb-3">
                        <input type="file" class="form-control" id="image" name="image" multiple>
                        <label class="input-group-text custom-file-label" for="image">Upload</label>
                    </div>
                </div> -->

                <div class="mb-3">
                    <div class="mb-3">
                        <label class="form-label text-white" for="description">Description</label>
                        <textarea class='form-control' type="text" id="description" name="shop[description]"
                            required><%=shop.description%></textarea>
                    </div>

                    <div class=" mb-3">
                        <button class="btn btn-light">
                            Update Shop
                        </button>
                    </div>

            </form>

        </div>
    </div>